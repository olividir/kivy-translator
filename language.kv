<GridLayout>:
    lbl: lbl
    rows: 2
    id: trans
    padding: 5
    spacing: 10

    BoxLayout:
        TextInput:
            id: input
            text: ''

        TextInput:
            size_hint_x: 0.2
            id: trans
            text: ''

        Button:
            id: lbl, input
            text: 'Translator'
            size_hint_x: 0.4
            on_press: root.translate(input.text)
            on_press: trans.b

    BoxLayout:
        Label:
            id: lbl
            text_size: self.size
            halign: 'center'
            valign: 'center'

